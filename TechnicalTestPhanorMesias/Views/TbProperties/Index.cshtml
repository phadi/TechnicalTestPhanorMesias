@model TechnicalTestPhanorMesias.Models.PropertyIndex

@{
    ViewData["Title"] = "Index";
}

<h1>PROPERTIES</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<h3>FILTERS</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                Owner Name
            </th>
            <th>
                Price range
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                CodeInternal
            </th>
            <th>
                Year
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <form asp-action="Index">
                <td>
                    <input asp-for="OwnerName" />
                </td>
                <td>
                    <input asp-for="MinPrice" />
                    <input asp-for="MaxPrice" />
                </td>
                <td>
                    <input asp-for="Name" />
                </td>
                <td>
                    <input asp-for="Address" />
                </td>
                <td>
                    <input asp-for="CodeInternal" />
                </td>
                <td>
                    <input asp-for="Year" />
                </td>
                <td>
                    <input type="submit" value="Search" class="btn btn-primary" />
                </td>
            </form>            
        </tr>
    </tbody>
</table>

<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodeInternal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                Owner
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Properties) 
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodeInternal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Owners.FullName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdProperty">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdProperty">Details</a> 
                </td>
            </tr>
    }
    </tbody>
</table>
