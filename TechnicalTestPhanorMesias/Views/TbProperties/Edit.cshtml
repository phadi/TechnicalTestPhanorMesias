@model RealStateDataModel.DTOs.TbPropertyDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Property</h1>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProperty" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodeInternal" class="control-label"></label>
                <input asp-for="CodeInternal" class="form-control" />
                <span asp-validation-for="CodeInternal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdOwner" class="control-label"></label>
                <select asp-for="IdOwner" class="form-control" asp-items="ViewBag.IdOwner"></select>
                <span asp-validation-for="IdOwner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            <input type="file" name="imagenSubida" accept="image/*" />
            <button type="submit">Subir Imagen</button>
            <a class="btn btn-primary" asp-action="GuardarImagen" >Subir Imagen</a>
        </form>
    </div>
</div>

<hr />
<h2>Images</h2>
<form asp-action="GuardarImagen" enctype="multipart/form-data">
    <input type="file" name="imagenSubida" accept="image/*" />
    <button type="submit">Subir Imagen</button>
    <a class="btn btn-primary" asp-action="GuardarImagen" >Subir Imagen</a>
</form>



@if (Model.Slides.Count > 0)
{
    <div class="border">
        <div class="carousel" data-ride="carousel" data-interval="2500">
            @* <img src="~/../TechnicalTestPhanorMesias/images/1_CasaProp1-copiaCopia.png" alt="Descripción de la imagen" />
            <img src="file:///C:/Users/Asus/source/repos/TechnicalTestPhanorMesias/TechnicalTestPhanorMesias/Images/1_casaprop1-copiacopia.png" /> 
            <img src="@Url.Action("ObtenerImagen", "TbProperties")" alt="Imagen de ejemplo" /> *@
            @foreach (var slide in Model.Slides)
            {
                <img src="@slide.ImageUrl" class="d-block w-100" alt="Imagen 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@slide.Title</h5>
                    <p>@slide.Caption</p>
                </div>
            }
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
